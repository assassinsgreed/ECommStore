<% if review.body.present? %>

  <div class="review">

    <div class="tools">
      <span class="edit"><%= link_to 'Edit Review', edit_review_path(review) %></span> |
      <%= link_to 'X', review, confirm: 'Are you sure you want to delete this review?', method: :delete%>
    </div>

    <div class="rating">
      <% if review.rating.present? %>
          <em><%= review.rating %>/5 stars</em>
      <% else %>
          <em>No rating provided</em>
      <% end %>
    </div>

    <div class="created">
      <%= review.created_at.strftime("%B %d, %Y at %I:%M %p") %>
    </div>

    <br /> <br />
    <div class="title">
      <% if review.title.present? %>
        <b><%= review.title %></b>
      <% else %>
        No Title
      <% end %>
    </div>

    <br />
    <div class="body">
      <p><%= review.body %></p>
    </div>

    <div class="author">
      <h3><%= review.attribution %></h3>
    </div>

  </div>
<% end %>